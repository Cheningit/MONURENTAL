<h1>Show Page</h1>

<p>Address: <%= @building.address %></p>
<p>name: <%= @building.name %></p>
<p>beds: <%= @building.beds %></p>
<p>price: <%= @building.price %></p>
<p>availability: <%= @building.availability %></p>

<%= cl_image_tag @building.photos[0].key, height: 300, width: 400, crop: :fill %>
<%= link_to "Book Today", new_building_booking_path(@building) %>


<p><strong>Reviews</strong></p>
<ul class="list-group">


<% @building.reviews.each do |review| %>
  <%= review.content %>
  <%= link_to "Destroy", review, data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>
<% end %>


  <h1>New review</h1>
  <%= simple_form_for ([@building, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</ul>
